{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/renderer/assets/*": ["./renderer/assets/*"],
      "~/renderer/components/*": ["./renderer/components/*"],
      "~/renderer/hooks/*": ["./renderer/hooks/*"],
      "~/renderer/modules/*": ["./renderer/modules/*"],
      "~/renderer/routes/*": ["./renderer/routes/*"],
      "~/renderer/store": ["./renderer/store/index.ts"],
      "~/renderer/*": ["./renderer/*"],
      "~/electron/*": ["./electron/*"],
      "~/types/*": ["./types/*"],
      "~/enums/*": ["./enums/*"],
    },
  },
  "include": [
    "renderer/**/*",
    "electron/**/*",
    "types/**/*",
    "enums/**/*",
    "forge.env.d.ts",
  ],
  "exclude": [
    "vite.config.ts",
    "vite.*.config.mts",
    "*.config.ts",
    "*.config.mts",
  ],
}
