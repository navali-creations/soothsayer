{
  "name": "soothsayer",
  "productName": "Soothsayer",
  "version": "0.1.1",
  "private": true,
  "description": "Path of Exile divination card tracker",
  "license": "SEE LICENSE IN LICENSE",
  "main": ".vite/build/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navali-creations/soothsayer.git"
  },
  "scripts": {
    "dev": "pnpm supabase:start && pnpm start",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "typecheck": "tsc --noEmit",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "migration:create": "node main/modules/database/migrations/create-migration.ts",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "supabase:start": "bash scripts/setup-local-dev.sh",
    "supabase:start:fresh": "bash scripts/setup-local-dev-fresh.sh",
    "supabase:stop": "bash scripts/stop-local-dev.sh",
    "supabase:sync": "bash scripts/sync-data.sh",
    "supabase:logs": "pnpx supabase functions serve --inspect-mode=run",
    "supabase:functions:serve": "pnpx supabase functions serve",
    "pretest": "pnpm rebuild better-sqlite3",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:db": "bash scripts/test-db.sh",
    "test:edge": "bash scripts/test-edge.sh",
    "test:all": "pnpm test && pnpm test:db && pnpm test:edge"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.28.0",
  "keywords": [],
  "author": {
    "name": "Sebastian Krzy≈ºanowski",
    "email": "eskrzy@gmail.com"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron/fuses": "^2.0.0",
    "@electron/rebuild": "^4.0.3",
    "@redux-devtools/extension": "^3.3.0",
    "@repere/react": "^0.3.2",
    "@sentry/electron": "^7.7.1",
    "@sentry/vite-plugin": "^4.9.0",
    "@supabase/supabase-js": "^2.95.3",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-router": "^1.159.5",
    "@tanstack/react-router-devtools": "^1.159.5",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/router-plugin": "^1.159.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "clsx": "^2.1.1",
    "daisyui": "^5.5.18",
    "dompurify": "^3.3.1",
    "electron": "40.2.1",
    "electron-devtools-installer": "^4.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "immer": "^11.0.1",
    "kysely": "^0.28.11",
    "motion": "^12.23.26",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "supabase": "^2.76.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "update-electron-app": "^3.1.2",
    "vite": "^7.3.1",
    "vite-plugin-externalize-deps": "^0.10.0",
    "vitest": "^4.0.18",
    "zustand": "^5.0.11"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
